<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spd.food.mapper.FoodMapper">

    <!-- 开启二级缓存 -->
    <!-- <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> -->

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.spd.food.beans.Food">
        <id column="food_id" property="foodId" />
        <result column="food_ident" property="foodIdent" />
        <result column="food_name" property="foodName" />
        <result column="food_desc" property="foodDesc" />
        <result column="food_introduce" property="foodIntroduce" />
        <result column="food_old_price" property="foodOldPrice" />
        <result column="food_present_price" property="foodPresentPrice" />
        <result column="food_mass_unit" property="foodMassUnit" />
        <result column="food_stock" property="foodStock" />
        <result column="food_sort" property="foodSort" />
        <result column="food_img" property="foodImg" />
        <result column="food_supplier" property="foodSupplier" />
        <result column="is_show" property="isShow" />
        <result column="create_time" property="createTime" />
        <result column="is_del" property="isDel" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        food_id, food_ident, food_name, food_desc, food_introduce, food_old_price, food_present_price, food_mass_unit, food_stock, food_sort, food_img, food_supplier,is_show,create_time, is_del
    </sql>

</mapper>
